<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>

        <item name="android:imageButtonStyle">@style/ImageButton.Compat</item>
        <item name="imageButtonStyle">@style/ImageButton.Compat</item>
    </style>

    <style name="ImageButton.Compat" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Search">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/app_search_hint_text_color</item>
    </style>

    <style name="AppTheme.Scrollbar">
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarThumbVertical">@null</item>
        <item name="android:scrollbarTrackVertical">@null</item>
    </style>

    <style name="AppTheme.BookDetail" />
    <style name="AppTheme.BookDetail.Header">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.BookDetail.Label">
        <item name="android:textColor">@color/app_text_color_tertiary</item>
    </style>
    <style name="AppTheme.BookDetail.Description">
        <item name="android:textColor">@color/app_text_color_secondary</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
