<resources>

    <style name="AppTheme" parent="QMUI.Compat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Search">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Scrollbar">
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarThumbVertical">@null</item>
        <item name="android:scrollbarTrackVertical">@null</item>
    </style>

    <style name="TextBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog" parent="QMUI.Dialog">
        <item name="qmui_dialog_action_style">@style/Dialog.Action</item>
        <item name="qmui_dialog_menu_item_style">@style/Dialog.MenuItem</item>
    </style>
    <style name="Dialog.MenuItem" parent="QMUI.Dialog_MenuItem">
        <item name="qmui_dialog_menu_item_mark_drawable">@drawable/dialog_check_mark</item>
    </style>
    <style name="Dialog.Action" parent="QMUI.Dialog.Action">
        <item name="android:textColor">@color/app_text_color_50</item>
        <item name="qmui_dialog_positive_action_text_color">@color/colorPrimary</item>
        <item name="qmui_dialog_negative_action_text_color">@color/colorDanger</item>
    </style>
</resources>
